<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.corsi.GestoreCorsiController">
	<center>
		<TextArea fx:id="txtResult" BorderPane.alignment="CENTER" />
	</center>
	<top>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<HBox alignment="CENTER" spacing="10.0">
					<children>
						<Label text="Periodo" />
						<TextField fx:id="txtPeriodo" />
						<Button fx:id="btnCercaCorsi" mnemonicParsing="false" onAction="#doCercaCorsi" text="Cerca corsi" />
						<Button fx:id="btnStatCorsi" mnemonicParsing="false" onAction="#doCalcolaStatCorsi" text="Statistiche corsi" />
					</children>
					<VBox.margin>
						<Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
					</VBox.margin>
				</HBox>
				<HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Corso" />
                  <TextField fx:id="txtCorso" />
                  <Button fx:id="btnStudentiCorso" mnemonicParsing="false" onAction="#doElencaStudenti" text="Elenca studenti" />
                  <Button fx:id="btnCDS" mnemonicParsing="false" onAction="#doCalcolaStatCDS" text="Statistiche CDS" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin></HBox>
			</children>
		</VBox>
	</top>
</BorderPane>
